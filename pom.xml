<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>no.bouvet.topicmap</groupId>
    <artifactId>root</artifactId>
    <version>0.1</version>
    <packaging>pom</packaging>
    <name>Topicmap Root</name>
    
    <contributors>
        <contributor>
            <name>Stig Lau</name>
            <email>stig.lau@bouvet.no</email>
            <organization>Bouvet ASA</organization>
        </contributor>
    </contributors>

    <!-- Local (SVN) Maven library repository for libraries that are not found in the sentral repo -->
    <repositories>
        <repository>
            <id>local</id>
            <url>file://${basedir}/lib</url>
        </repository>
    </repositories>

    <!-- Subversion Configuration - Used by Continuum -->
    <scm>
        <connection>scm:svn:http://svn.bouvet.no/svn/trunk/topicmap</connection>
        <url>http://svn.bouvet.no/svn/trunk/topicmap</url>
    </scm>

    <modules>
        <module>topicmapapi</module>
        <module>topicmaptest</module>
    </modules>

    <!-- Felles dependency management for håndtering av versjoner - slipper å skrive dette spesielt for undermoduler -->
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>4.1</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>net.ontopia</groupId>
                <artifactId>oks-sampler</artifactId>
                <version>3.3.0</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <encoding>UTF-8</encoding>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>